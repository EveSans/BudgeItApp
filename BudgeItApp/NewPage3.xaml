<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgeItApp.NewPage3"
             Title="NewPage3"
             BackgroundColor="White">
    <StackLayout Margin="0,30">
        <StackLayout VerticalOptions="StartAndExpand">
            <Image Margin="20,-60,20,130"
                    Source="blogo.png"
                    HeightRequest="100"
                    Aspect="AspectFit"
                    SemanticProperties.Description="logo"/>
            <Frame BorderColor="White" BackgroundColor="#dfffb3" Margin="0,-160" MaximumHeightRequest="70">
                <Label 
                    Text="Split"
                    FontSize="20"
                    TextColor="MidnightBlue"
                    FontAttributes="Bold"
                    VerticalOptions="Start" 
                    HorizontalOptions="Center" />
            </Frame>
        </StackLayout>
        
        <Button
            x:Name="CounterBtn" BackgroundColor="DarkGreen" CornerRadius="26" WidthRequest="85"
            Text="Deposit" 
            SemanticProperties.Hint="Navigate to Page 1"
            Clicked="GoPone"
            HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>